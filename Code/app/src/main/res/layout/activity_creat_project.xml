<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10sp"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".PostProjectActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="Name Project"/>

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Software project"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="Description"/>

    <EditText
        android:id="@+id/DescriptionEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What you want"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="Budget" />

    <EditText
        android:id="@+id/budgetEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="O"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="Skill Require"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter skill you want"
        >

    </com.google.android.material.chip.ChipGroup>


    <EditText
        android:id="@+id/chipText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter chip text"/>
    <Button
        android:id="@+id/addChipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Chip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="Choose kind of Pay"/>

    <EditText
        android:id="@+id/KindofPayEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ethereum"/>

    <Button
        android:id="@+id/submitProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"/>

</LinearLayout>