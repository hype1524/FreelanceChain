<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F8"
    tools:context=".auth.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_edit_profile_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_img"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    app:civ_border_color="#D1D1D1"
                    android:src="@drawable/default_profile_picture"
                    app:civ_border_width="5dp" />

                <ImageView
                    android:id="@+id/edit_profile_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@id/profile_img"
                    android:layout_alignEnd="@id/profile_img"
                    android:padding="10dp"
                    android:background="@drawable/baseline_circle_24"
                    android:src="@drawable/baseline_photo_camera_24" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreysan"
                android:text="Rudeus Greyrat"
                android:textSize="28sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/post_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/post_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="posts"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/guest_info"
                android:layout_width="match_parent"
                android:layout_marginVertical="10dp"
                android:visibility="gone"
                android:layout_height="45dp">
                <Button
                    android:id="@+id/message_btn"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="Message"
                    android:drawableLeft="@drawable/baseline_chat_24"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <Button
                        android:id="@+id/add_post_btn"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:text="Add posts"
                        android:drawableLeft="@drawable/baseline_add_24"/>
                    <Button
                        android:id="@+id/edit_profile_btn"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:text="Edit profile"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/baseline_edit_24"
                        android:backgroundTint="@color/bg_grey"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/liked_card"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/liked_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:drawableTop="@drawable/like"
                                android:gravity="center"
                                android:fontFamily="@font/alegreysan"
                                android:textSize="25sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Liked posts"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/commented_card"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/commented_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:drawableTop="@drawable/comment"
                                android:gravity="center"
                                android:fontFamily="@font/alegreysan"
                                android:textSize="25sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Commented posts"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_bg"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>