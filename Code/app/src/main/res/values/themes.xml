<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FreelanchainCode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#2196F3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03A9F4</item>
        <item name="colorSecondaryVariant">#03A9F4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="android:textViewStyle">@style/AlegreyTextViewStyle</item>
        <item name="android:editTextStyle">@style/oldstandar_regularEditTextStyle</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/philo_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="splashscreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/freelancer</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="AlegreyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/alegrey</item>
        <item name="android:textColor">#383838</item>
    </style>

    <style name="oldstandar_regularEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/oldstandar_regular</item>
        <item name="android:textColor">#383838</item>
    </style>

    <style name="RoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
        <!-- Support library compatibility -->
        <item name="background">@color/blue</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="Base.Theme.FreelanchainCode.NoActionBar" parent="Base.Theme.FreelanchainCode">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.FreelanchainCode.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.FreelanchainCode.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>